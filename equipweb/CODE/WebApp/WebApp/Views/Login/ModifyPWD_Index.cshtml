
@{
    ViewBag.Title = "ModifyPWD_Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}




<div class="login-box">
    <div class="login-logo" style="width:750px"">
        <a href="#"><b>EquipIntegrity</b>MS</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body" style="width:750px">
        <p class="login-box-msg">修改用户密码界面</p>
        <!--<form  method="post">-->
        <div class="form-group has-feedback">
           
            <input class="form-control col-sm-6 " type="text" placeholder="用户名" id="UserName" value="@ViewBag.userName" disabled="disabled">
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            
            <input class="form-control col-sm-6" type="password" placeholder="原始密码" id="UserPwd">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
          
            <input class="form-control col-sm-6" type="password" placeholder="更改密码" id="UserPwd_new1">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
           
            <input class="form-control col-sm-6" type="password" placeholder="更改密码确认" id="UserPwd_new2">
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input style="background: rgb(255, 255, 255); margin: 0px; padding: 0px; border: 0px currentColor; border-image: none; left: -20%; top: -20%; width: 140%; height: 140%; display: block; position: absolute; opacity: 0;" type="checkbox"><ins class="iCheck-helper" style="background: rgb(255, 255, 255); margin: 0px; padding: 0px; border: 0px currentColor; border-image: none; left: -20%; top: -20%; width: 140%; height: 140%; display: block; position: absolute; opacity: 0;"></ins></div> 记住我
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button class="btn btn-primary btn-block btn-flat" onclick="submit_click()">更改密码</button>
            </div>
            <!-- /.col -->
        </div>
        <!--</form>-->


    </div>
    <!-- /.login-box-body -->
</div>






@section js{


    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });

        function submit_click() {

            var name = $("#UserName").val();
            var pwd = $("#UserPwd").val();
            var pwd_New1 = $("#UserPwd_new1").val();
            var pwd_New2 = $("#UserPwd_new2").val();
          
                $.ajax({
                    type: 'POST',
                    url: '/Login/ModifyPWD',
                    data: { "userName": name, "userPwd": pwd, "newUserPWd": pwd_New1 },
                    success: function (data) {
                       
                        location.href = data;
                    },
                    error: function ()
                    {
                        alert('error');
                    }
                });
         
        }

    </script>
    }