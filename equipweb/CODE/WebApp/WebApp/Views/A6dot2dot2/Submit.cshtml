                    },
                    {
                        extend: "remove",
                        text: "删除",

                        action: function (e, dt, node, config) {
                            var rows = dt.rows({ selected: true }).data().pluck('job_name');
                            editor
                                .title('删除')
                                .buttons('确认删除')
                                .message('确定删除<ul><li>' + rows.join('</li><li>') + '</li></ul>')
