                                     "sZeroRecords": "没有检索到数据",
                                     "sSearch": "模糊查询:  ",
                                     "sProcessing": "<img src='/images/loading.gif'>  努力加载数据中.",
                                     "oPaginate": {
                                         "sFirst": "首页",
                                         "sPrevious": "前一页",
                                         "sNext": "后一页",
                                         "sLast": "尾页"
                                     }
                                },
                     "paging": true,
                     "lengthChange": false,
                     "searching": true,
                     //"ordering": true,
                     "info": true,
                     "autoWidth": false,
                     "aoColumnDefs": [ { "bSortable": false, "aTargets": [0,4,5] }] 
                 });
             });
      </script>
    }


