@model WebApp.Controllers.CommonController.MissInfoModel
@{
    ViewBag.Title = "ZytdConfirm";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
                <li class="time-label">
                    <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample">
                       装置缺陷提报
                       </a>
              </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li class="collapse.in" id="collapseExample">
                    <i class="fa fa-envelope bg-blue"></i>
                    <div class="timeline-item">
                        <i class="fa fa-clock-o"></i> 提报人：@Model.MissUser[1]  提报时间：@Model.MissTime[1]
                        <h3 class="timeline-header"><p class="lead">装置缺陷提报详情</p></h3>
                        <div class="timeline-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>申请时间</td>
                                        <td>@Model.miModel.Miss_Params["submit_time"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>申请车间</td>
                                        <td>@Model.miModel.Miss_Params["Cj_Name"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>申请装置</td>
                                        <td>@Model.miModel.Miss_Params["Zz_Name"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>申请人</td>
                                        <td>@Model.miModel.Miss_Params["submit_user"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>设备工艺编号</td>
                                        <td>@Model.miModel.Miss_Params["Equip_GyCode"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>设备编号</td>
                                        <td>@Model.miModel.Miss_Params["Equip_Code"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>设备型号</td>
                                        <td>@Model.miModel.Miss_Params["Equip_Type"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>问题专业分类</td>
                                        <td>@Model.miModel.Miss_Params["Zy_Type"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>设备问题描述</td>
                                        <td>@Model.miModel.Miss_Params["Problem_Desc"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>问题描述附件</td>
                                        <td>@Model.miModel.Miss_Params["Problem_DescFilePath"].ToString()</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="timeline-footer">
                            <a class="btn btn-primary btn-xs">Read more</a>
                            <a class="btn btn-danger btn-xs">Delete</a>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->

                <li class="time-label">
                    <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample1" aria-expanded="false" aria-controls="collapseExample1">
                       片区分类
                    </a>
                </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li class="collapse.in" id="collapseExample1">
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>分类用户： @Model.MissUser[2] 分类结果提报时间：@Model.MissTime[1]</span>
                        <h3 class="timeline-header"><p class="lead">片区分类结果</p></h3>
                        <div class="timeline-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>缺陷类别</td>
                                        <td>@Model.miModel.Miss_Params["catlog_type"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>缺陷等级</td>
                                        <td>@Model.miModel.Miss_Params["defect_level"].ToString()</td>
                                    </tr>
                                    <tr>
                                        <td>故障强度等级</td>
                                        <td id="fault_intensity_pq">@Model.miModel.Miss_Params["fault_intensity"].ToString()</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </li>


                <li class="time-label">
                    <span class="bg-green">
                        @ViewBag.curtime
                    </span>
                </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>审核人: @ViewBag.curuser</span>
                        <h3 class="timeline-header"><p class="lead">专家团队审核</p></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
                                <div id="ZjtdOpinion" class="form-group">
                                    <p class="text-green">专家团队审核意见</p>
                                    <div class="radio">
                                        <label>
                                            <input name="ZjtdOpinion" id="ZjtdOpinionYes" type="radio" value="1" checked="" onchange="ZjtdOpinionYes_Click()">
                                            同意
                                        </label>
                                        <label>
                                            <input name="ZjtdOpinion" id="ZjtdOpinionNo" type="radio" value="0" onchange="ZjtdOpinionNo_Click()">
                                            不同意(需重新设定故障强度等级）
                                        </label>

                                    </div>
                                </div>
                                <div id="FaultIntensity" class="form-group">
                                    <p class="text-green">重新设定故障强度等级</p>
                                    <div>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity1"
                                                   value="1级">1级
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity2"
                                                   value="2级">2级
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity3"
                                                   value="3级">3级
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity4"
                                                   value="4级">4级
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity5"
                                                   value="5级">5级
                                        </label>
                                        <label class="checkbox-inline">
                                            <input type="radio" name="FaultIntensity" id="FaultIntensity6"
                                                   value="6级">6级
                                        </label>

                                    </div>
                                </div>
                                <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


@section js{
    <script>
        function PageLoad() {
            $("#FaultIntensity").hide();
        };
        $(document).ready(
            PageLoad());

        function ZjtdOpinionNo_Click() {
            $("input:radio[name='FaultIntensity']").each(function () {
                //alert($(this).val());
                //alert($("#fault_intensity_pq").text());
                if($(this).val()== $("#fault_intensity_pq").text())
                    $(this).attr('checked','checked');
            })
                
            $("#FaultIntensity").show();

        }
        function ZjtdOpinionYes_Click() {
            $("#FaultIntensity").hide();

        }

        function submit_click() {
            var flow_name = $("#wef_id").val();
            var fault_intensity = $("#fault_intensity_pq").text();
            if ($("input:radio[name='ZjtdOpinion']:checked").val() == '0')
                fault_intensity = $("input:radio[name='FaultIntensity']:checked").val();
            $.ajax({
                type: 'POST',
                url: '/A13dot1/submitZytdConfirm_signal',
                data: {
                    json1: '{Flow_Name: "' + flow_name
                        + '", fault_intensity: "' + fault_intensity + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error');
                }
            });

        }
    </script>
}
