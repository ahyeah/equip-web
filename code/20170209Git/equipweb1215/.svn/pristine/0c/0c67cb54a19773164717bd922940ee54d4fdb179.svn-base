@model WebApp.Controllers.CommonController.WFDetail_Model
@{
    ViewBag.Title = "ToERPCreateJob";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
               <!-- 工作流当前任务-Star -->
                    <!-- timeline item -->
                    <li class="time-label">
                        <span class="bg-green">
                           当前任务：推送到ERP，生成工单
                        </span>
                    </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o">@ViewBag.curtime</i>当前用户：@ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead" style="color:red">推送到ERP，生成工单</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
                                <div id="toERP" class="form-group">
                                    <p class="text-green">推送是否成功？</p>
                                    <div class="radio">
                                        <label>
                                            <input name="toERP" id="toERPYes" type="radio" value="1" checked="" onchange="toERPYes_Click()">
                                            是
                                        </label>
                                        <label>
                                            <input name="toERP" id="toERPNo" type="radio" value="0" onchange="toERPNo_Click()">
                                            否
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group" id="jobOrder">
                                    <label   class="col-sm-2 control-label">生成的工单号：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Job_Order">
                                    </div>
                                </div>
                                <div id="notice"><span>提示：需要重新推送到ERP！</span></div>
                                
                                <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <!-- 工作流当前任务-End -->

                 <!-- 工作流历史操作-通用部分Star -->
                   <li class="time-label">
                            <span class="bg-green">
                               当前工作流历史操作
                            </span>
                        </li>
                     <!-- timeline time label -->  
                    @for (int i = @Model.ALLHistoryMiss.Count()-1; i >=1 ; i--)
                    {     <li class="time-label">
                              <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@i" aria-expanded=true aria-controls="@i">
                                  @Model.MissTime[i] - @Model.ALLHistoryMiss[i].WE_Event_Desc
                              </a>
                           </li>
                    
                          <li class="collapse" id="@i">
                            <i class="fa fa-camera bg-purple"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.MissTime[i]</i>操作用户： @Model.MissUser[i]</span>
                                <h3 class="timeline-header lead"><span class="lead" style="color:red">@Model.ALLHistoryMiss[i].WE_Event_Desc</span></h3>
                                <div class="timeline-body">
                                    <table class="table  table-hover table-bordered">
                                        <tbody>
                                            @foreach (var pp in @Model.ALLHistoryMiss[i].Miss_Params)
                                            {
                                            <tr class="info">
                                                <th>@pp.Key</th>
                                                <td>@pp.Value.ToString()</td>
                                            </tr>
                                            }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                }
                     
                <!-- END timeline item -->

                  <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li> 
            <!-- 工作流历史操作-通用部分End -->
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
 
</section>

@section js{
    <script>
        function PageLoad() {
            $("#jobOrder").show();
            $("#notice").hide();
        };
        $(document).ready(
            PageLoad());

        function toERPNo_Click() {                            
            $("#jobOrder").hide();
            $("#notice").show();
        }
        function toERPYes_Click() {
            $("#jobOrder").show();
            $("#notice").hide();
        }

        function submit_click() {
            var flow_name = $("#wef_id").val();            
            if ($("input:radio[name='toERP']:checked").val() == '1' && $("#Job_Order").val()!="") {
                ToERPCreateJob_done = "true";
                Job_Order = $("#Job_Order").val();
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/ToERPCreateJob_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name
                            + '", Job_Order: "' + Job_Order
                            + '", ToERPCreateJob_done: "' + ToERPCreateJob_done
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }


        }
    </script>
}