@model WebApp.Controllers.CommonController.WFDetail_Model
@{
    ViewBag.Title = "PqQualityControl";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
               <!-- 工作流当前任务-Star -->
                    <!-- timeline item -->
                    <li class="time-label">
                        <span class="bg-green">
                           当前任务：片区进行检修过程质量检查控制
                        </span>
                    </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o">@ViewBag.curtime</i>当前用户：@ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead" style="color:red">片区进行检修过程质量检查控制</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">                            
                                <div id="Jxdw" class="form-group">
                                    <p class="text-green">是否完成？</p>
                                    <div class="radio">
                                        <label>
                                            <input name="IsDone" id="IsDoneYes" type="radio" value="1" checked="" onchange="IsDoneYes_Click()">
                                            是
                                        </label>
                                        <label>
                                            <input name="IsDone" id="IsDoneNo" type="radio" value="0" onchange="IsDoneNo_Click()">
                                            否
                                        </label>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="col-sm-2 control-label">检修过程质量确认</label>
                                    <div class="col-sm-10" >
                                           <label class="checkbox-inline">
                                           <input type="checkbox" name="PqQualityControlOptions"  id="inlineCheckbox1" value="中间质量检查"> 中间质量检查
                                           </label>
                                           <label class="checkbox-inline">
                                              <input type="checkbox" name="PqQualityControlOptions" id="inlineCheckbox2" value="质量检验检测报告"> 质量检验检测报告
                                           </label>
                                           <label class="checkbox-inline">
                                              <input type="checkbox" name="PqQualityControlOptions" id="inlineCheckbox3" value="配件更换清单"> 配件更换清单
                                           </label>
                                           <label class="checkbox-inline">
                                              <input type="checkbox" name="PqQualityControlOptions" id="inlineCheckbox4" value="试车"> 试车
                                           </label>
                                           <label class="checkbox-inline">
                                              <input type="checkbox" name="PqQualityControlOptions" id="inlineCheckbox5" value="完工验收">完工验收
                                           </label>
                                    </div>
                                </div>
                             <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <!-- 工作流当前任务-End -->

                 <!-- 工作流历史操作-通用部分Star -->
                   <li class="time-label">
                            <span class="bg-green">
                               当前工作流历史操作
                            </span>
                        </li>
                     <!-- timeline time label -->  
                    @for (int i = @Model.ALLHistoryMiss.Count()-1; i >=1 ; i--)
                    {     <li class="time-label">
                              <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@i" aria-expanded=true aria-controls="@i">
                                  @Model.MissTime[i] - @Model.ALLHistoryMiss[i].WE_Event_Desc
                              </a>
                           </li>
                    
                          <li class="collapse" id="@i">
                            <i class="fa fa-camera bg-purple"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.MissTime[i]</i>操作用户： @Model.MissUser[i]</span>
                                <h3 class="timeline-header lead"><span class="lead" style="color:red">@Model.ALLHistoryMiss[i].WE_Event_Desc</span></h3>
                                <div class="timeline-body">
                                    <table class="table  table-hover table-bordered">
                                        <tbody>
                                             @foreach (var pp in @Model.ALLHistoryMiss[i].Miss_ParamsAppRes)
                                            {
                                                if(pp.Value.ToString()!="App_hidden")
                                                {
                                                    <tr class="info">
                                                        <th>@Model.ALLHistoryMiss[i].Miss_ParamsDesc[pp.Key]</th>
                                                       @if ((@Model.ALLHistoryMiss[i].Miss_ParamsDesc[pp.Key].ToString()).IndexOf("附件") > -1 && @Model.ALLHistoryMiss[i].Miss_Params[pp.Key]!="")
                                                       {
                                                           string[] savedFileName = (@Model.ALLHistoryMiss[i].Miss_Params[pp.Key].ToString()).Split(new char[] { '$' });
                                                           string saveExistFilename = Path.Combine("/Upload", savedFileName[1]);
                                                           <td><a href=@saveExistFilename target=_blank> @savedFileName[0]</a></td> }
                                                       else
                                                        {<td>@Model.ALLHistoryMiss[i].Miss_Params[pp.Key]</td>}
                                                    </tr>
                                                 }
                                            }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                }
                     
                <!-- END timeline item -->

                  <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li> 
            <!-- 工作流历史操作-通用部分End -->
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
 
</section>
@section js{
    <script>
        function PageLoad() {
           
        };
        $(document).ready(
            PageLoad());

        function IsDoneNo_Click() {                           
            
        }
        function IsDoneYes_Click() {           
        }

        function submit_click() {
            var flow_name = $("#wef_id").val();           
            if ($("input:radio[name='IsDone']:checked").val() == '1') {
                PqQualityControl_done = "true";
                PqQualityControl_Result = "";
                $("input:checkbox[name='PqQualityControlOptions']:checked").each(function () {
                    PqQualityControl_Result += $(this).val() + " ";
                });
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/PqQualityControl_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name             
                            + '", PqQualityControl_done: "' + PqQualityControl_done
                            + '", PqQualityControl_Result: "' + PqQualityControl_Result
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }
        }
    </script>
}

