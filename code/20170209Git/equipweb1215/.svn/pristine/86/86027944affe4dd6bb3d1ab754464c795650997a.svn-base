@model WebApp.Controllers.CommonController.MissInfoModel
@{
    ViewBag.Title = "JxdwCreatePlan";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
            <li class="time-label">
                    <span class="bg-green">
                        @ViewBag.curtime
                    </span>
                </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>当前用户: @ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead">检维修单位完善工单，制定检修方案</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
                                <div id="Jxdw" class="form-group">
                                    <p class="text-green">是否已完善工单？</p>
                                    <div class="radio">
                                        <label>
                                            <input name="IsDone" id="IsDoneYes" type="radio" value="1" checked="" onchange="IsDoneYes_Click()">
                                            是
                                        </label>
                                        <label>
                                            <input name="IsDone" id="IsDoneNo" type="radio" value="0" onchange="IsDoneNo_Click()">
                                            否
                                        </label>
                                    </div>
                                </div>
                                <div id="jobOrder">
                                    <div class="form-group" >
                                    <label   class="col-sm-2 control-label">生成的工单号：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Job_Order">
                                    </div>
                                     </div>
                                    <div class="form-group">
                                        <label   class="col-sm-2 control-label">检修方案描述</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" rows="3" id="Plan_Desc"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label   class="col-sm-2 control-label">检修方案附件上传</label>
                                        <div class="col-sm-10">
                                            <input type="file" id="inputfile">
                                        </div>
                                    </div>
                                </div>
                                                                
                                
                                <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


@section js{
    <script>
        function PageLoad() {
            $("#jobOrder").show();
            $("#notice").hide();
        };
        $(document).ready(
            PageLoad());

        function IsDoneNo_Click() {                            
            $("#jobOrder").hide();
            $("#notice").show();
        }
        function IsDoneYes_Click() {
            $("#jobOrder").show();
            $("#notice").hide();
        }

        function submit_click() {
            var flow_name = $("#wef_id").val();            
            if ($("input:radio[name='IsDone']:checked").val() == '1' && $("#Job_Order").val()!="") {
                JxdwCreatePlan_done = "true";
                Job_Order = $("#Job_Order").val();
                Plan_Desc = $("#Plan_Desc").text();
                Plan_DescFilePath = $("#inputfile").val();
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/JxdwCreatePlan_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name
                            + '", Job_Order: "' + Job_Order
                            + '", Plan_Desc: "' + Plan_Desc
                            + '", Plan_DescFilePath: "' + Plan_DescFilePath
                            + '", JxdwCreatePlan_done: "' + JxdwCreatePlan_done
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }


        }
    </script>
}