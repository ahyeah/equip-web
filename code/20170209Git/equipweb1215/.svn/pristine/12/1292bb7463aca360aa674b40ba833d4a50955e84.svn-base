@model WebApp.Controllers.A8dot2Controller.CatalogModel
@{
    ViewBag.Title = "JobFinishClose";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
            <li class="time-label">
                    <span class="bg-green">
                        @ViewBag.curtime
                    </span>
                </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>当前用户: @ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead">检修计划实施完成，封闭通知单</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
@*                                 <div class="form-group" >
                                    <label   class="col-sm-2 control-label">故障强度等级（为模拟逻辑请输入）：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="FaultyIntensity">
                                    </div>
                                   </div> *@                               
                                <div id="Jxdw" class="form-group">
                                    <p class="text-green">是否完成？</p>
                                    <div class="radio">
                                        <label>
                                            <input name="IsDone" id="IsDoneYes" type="radio" value="1" checked="" onchange="IsDoneYes_Click()">
                                            是
                                        </label>
                                        <label>
                                            <input name="IsDone" id="IsDoneNo" type="radio" value="0" onchange="IsDoneNo_Click()">
                                            否
                                        </label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


@section js{
    <script>
        function PageLoad() {
           
        };
        $(document).ready(
            PageLoad());

        function IsDoneNo_Click() {                           
            
        }
        function IsDoneYes_Click() {           
        }

        function submit_click() {
            var flow_name = $("#wef_id").val();           
            if ($("input:radio[name='IsDone']:checked").val() == '1') {
                JobFinishClose_done = "true";
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/JobFinishClose_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name             
                            + '", JobFinishClose_done: "' + JobFinishClose_done
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }
        }
    </script>
}


