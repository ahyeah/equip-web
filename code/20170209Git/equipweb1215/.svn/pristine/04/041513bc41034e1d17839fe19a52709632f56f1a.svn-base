
@{
    ViewBag.Title = "ProblemClassification";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>ProblemClassification</h2>
<section class="content" style="background-color: #ecf0f5;">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">状态监测及三检特护问题分类（片区权限）</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" role="form">

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">问题分类</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios1"
                                       value="option1" checked>不完好【完好类问题A5.1】
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios2"
                                       value="option2"> 隐患【隐患类问题A11.2】
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios3"
                                       value="option3"> 缺陷故障【缺陷类问题A13.1】
                            </label>  
                  
                        </div>
                    </div>
        
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">确认</button>
                        </div>
                    </div>
                </form>              

            </div>
        </div>
    </div>
</section>
