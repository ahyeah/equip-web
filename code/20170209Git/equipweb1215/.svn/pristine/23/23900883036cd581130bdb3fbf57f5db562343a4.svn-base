
@{
    ViewBag.Title = "ManualSubmit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>ManualSubmit</h2>
<section class="content" style="background-color: #ecf0f5;">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">人工提报</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">装置</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">装置1</option>
                                <option>装置2</option>
                                <option>装置3</option>                    
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">设备工艺编号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">设备工艺编号1</option>
                                <option>设备工艺编号2</option>
                                <option>设备工艺编号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">设备编号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">设备编号1</option>
                                <option>设备编号2</option>
                                <option>设备编号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">设备位号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 设备位号1</option>
                                <option>设备位号2</option>
                                <option>设备位号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">车间</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 车间1</option>
                                <option>车间2</option>
                                <option>车间3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">设备专业分类</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 设备专业分类1</option>
                                <option>设备专业分类2</option>
                                <option>设备专业分类3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">风险来源</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios1"
                                       value="option1" checked>人工提报
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios2"
                                       value="option2"> 【A11.2】设备隐患排查
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios3"
                                       value="option3"> 【A12.1】设备本体改造
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios4"
                                       value="option4"> 【A12.2】工艺变更管理
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios54"
                                       value="option5"> 【A13.1】缺陷故障管理
                            </label>

                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">风险描述</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">附件上传</label>
                        <div class="col-sm-10">
                            <input type="file" id="inputfile">
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">风险评估时间</label>
                        <div class="col-sm-10">
                            <div class="input-group" >                                   
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="reservationtime">                         
                                <!-- /.input group -->
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">提交</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
@section js{
    <!-- Page script -->
    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();

            //Date range picker
            $('#reservation').daterangepicker();
            //Date range picker with time picker
            $('#reservationtime').daterangepicker({ timePicker: true, timePickerIncrement: 30, format: 'MM/DD/YYYY h:mm A' });
            
            //Timepicker
            $(".timepicker").timepicker({
                showInputs: false
            });
        });
    </script>
    }
