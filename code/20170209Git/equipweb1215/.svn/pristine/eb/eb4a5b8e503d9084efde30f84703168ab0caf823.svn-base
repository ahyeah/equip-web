@model WebApp.Controllers.CommonController.WFDetail_Model
@{
    ViewBag.Title = "JxdwCreatePlan";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
               <!-- 工作流当前任务-Star -->
                    <!-- timeline item -->
                    <li class="time-label">
                        <span class="bg-green">
                           当前任务：检维修单位完善工单，制定检修方案
                        </span>
                    </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o">@ViewBag.curtime</i>当前用户：@ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead" style="color:red">检维修单位完善工单，制定检修方案</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
                                <div id="Jxdw" class="form-group">
                                    <p class="text-green">是否已完善工单？</p>
                                    <div class="radio">
                                        <label>
                                            <input name="IsDone" id="IsDoneYes" type="radio" value="1" checked="" onchange="IsDoneYes_Click()">
                                            是
                                        </label>
                                        <label>
                                            <input name="IsDone" id="IsDoneNo" type="radio" value="0" onchange="IsDoneNo_Click()">
                                            否
                                        </label>
                                    </div>
                                </div>
                                <div id="jobOrder">
                                    <div class="form-group" >
                                    <label   class="col-sm-2 control-label">生成的工单号：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Job_Order">
                                    </div>
                                     </div>
                                    <div class="form-group">
                                        <label   class="col-sm-2 control-label">检修方案（描述）:</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" rows="3" id="Plan_Desc"></textarea>
                                        </div>
                                    </div>                             
                                </div>   
                            </form>

                             <form  role="form" id="filePost" method="post" action="/Common/Upload" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">检修方案（附件）:</label>
                                    <div class="col-sm-10 table-bordered">
                                        <div class="col-sm-5">
                                            <input type="file" id="inputfile" name="file">
                                        </div>
                                        <div class="col-sm-5">
                                            <input id="ButtonUpload" type="submit" value="上传文件" />
                                        </div>
                                        <iframe id="outputdiv" style="display:none">  </iframe>
                                        <input type="text" id="fileUpLoad_name" style="display:none" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label"></label>
                                    <div id="msg" class="col-sm-10"></div>
                                    </div>
                             </form>
                 
                           <form role="form">   
                           <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                           </div>
                           </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <!-- 工作流当前任务-End -->

                 <!-- 工作流历史操作-通用部分Star -->
                   <li class="time-label">
                            <span class="bg-green">
                               当前工作流历史操作
                            </span>
                        </li>
                     <!-- timeline time label -->  
                    @for (int i = @Model.ALLHistoryMiss.Count()-1; i >=1 ; i--)
                    {     <li class="time-label">
                              <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@i" aria-expanded=true aria-controls="@i">
                                  @Model.MissTime[i] - @Model.ALLHistoryMiss[i].WE_Event_Desc
                              </a>
                           </li>
                    
                          <li class="collapse" id="@i">
                            <i class="fa fa-camera bg-purple"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.MissTime[i]</i>操作用户： @Model.MissUser[i]</span>
                                <h3 class="timeline-header lead"><span class="lead" style="color:red">@Model.ALLHistoryMiss[i].WE_Event_Desc</span></h3>
                                <div class="timeline-body">
                                    <table class="table  table-hover table-bordered">
                                        <tbody>
                                             @foreach (var pp in @Model.ALLHistoryMiss[i].Miss_ParamsAppRes)
                                            {
                                                if(pp.Value.ToString()!="App_hidden")
                                                {
                                                    <tr class="info">
                                                        <th>@Model.ALLHistoryMiss[i].Miss_ParamsDesc[pp.Key]</th>
                                                        <td>@Model.ALLHistoryMiss[i].Miss_Params[pp.Key]</td>
                                                    </tr>
                                                 }
                                            }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                }
                     
                <!-- END timeline item -->

                  <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li> 
            <!-- 工作流历史操作-通用部分End -->
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
 
</section>

@section js{
    <script src="~/Scripts/jquery.form.js"></script>   <script src="~/Scripts/myFormValidator.js"></script>
    <script>
        function PageLoad() {
            $("#jobOrder").show();
            $("#notice").hide();
        };
        $(document).ready(
            PageLoad());
            var options = {
                target: '#outputdiv',
                success: showResponse,
                error: function (data) {
                    $("#outputdiv").html = data;
                }
            };

        function IsDoneNo_Click() {                            
            $("#jobOrder").hide();
            $("#notice").show();
        }
        function IsDoneYes_Click() {
            $("#jobOrder").show();
            $("#notice").hide();
        }

        function submit_click() {
            if (!myValidation())
                return false;
            if (!confirm('确定要提交吗？'))
                return false;

            var flow_name = $("#wef_id").val();            
            if ($("input:radio[name='IsDone']:checked").val() == '1' && $("#Job_Order").val()!="") {
                JxdwCreatePlan_done = "true";
                Job_Order = $("#Job_Order").val();
                Plan_Desc = $("#Plan_Desc").val();
                Plan_DescFilePath = $("#inputfile").val();
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/JxdwCreatePlan_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name
                            + '", Job_Order: "' + Job_Order
                            + '", Plan_Desc: "' + Plan_Desc
                            + '", Plan_DescFilePath: "' + Plan_DescFilePath
                            + '", JxdwCreatePlan_done: "' + JxdwCreatePlan_done
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }
        }


        function btnDelAttach_click() {
            var filename = $("#fileUpLoad_name").val()
            //alert($("#fileUpLoad_name").val());
            $.ajax({
                url: '/Common/DelAttachment',
                type: 'post',
                dataType: 'json',
                data: { "file": filename },
                // contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.status == "success") {
                        $("#msg").empty();
                    } else {
                        alert(data.message);
                    }

                }
              ,
                error: function (err) {
                    alert(err.toString());
                }
            });
        };


        $('#filePost').submit(function () {
            var options = {
                target: '#outputdiv',
                dataType: 'json',
                success: function (data) {
                    $("#msg").empty().append("<table  ><td  class=\"col-sm-5\">已上传附件：" + data.fileName + "(" + data.fileSize + ")</td><td class=\"col-sm-2\"><input type='button' onclick=\"btnDelAttach_click()\" value='删除文件' class='fh_btn' id='btnDelAttach' filename='" + data.fileName + "' filesize='" + data.fileSize + "'></td>");
                    $("#fileUpLoad_name").val(data.fileName);
                },

                error: function (data) {
                    // $("#outputdiv").val() = "上传失败！";
                    alert(data);
                }
            };
            $(this).ajaxSubmit(options);

            return false;
        });

        function showRequest(formData, jqForm, options) {
            alert('发送前');
            return true;
        }

        function showResponse(responseText, statusText) {

        };
    </script>
}