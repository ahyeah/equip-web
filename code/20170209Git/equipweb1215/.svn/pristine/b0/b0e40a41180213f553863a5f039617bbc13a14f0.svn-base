<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Control="clr-namespace:System.Windows.Control" x:Class="FlowDesigner.MainWindow"
        Title="FlowDesigner" Height="605" Width="893" Loaded="Window_Loaded">
    <Grid>
        <ToolBarTray Height="30" VerticalAlignment="Top">
            <ToolBar VerticalAlignment="Stretch" Height="30">
                <RadioButton Name="AddEvent" Width="25" Height="25" Content="aa" ToolTip="Event" Checked="RadioButton_Checked"/>
                <RadioButton Width="25" Height="25" Content="bb" ToolTip="Flow"/>                
            </ToolBar>
        </ToolBarTray>
        <Grid Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="241*"/>
                <ColumnDefinition Width="65*"/>
            </Grid.ColumnDefinitions>
            <TreeView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0"/>
            <GridSplitter Width="5"/>
            <TabControl Name="mainTab" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" MouseLeftButtonUp="mainCanvas_MouseLeftButtonUp">
                <TabItem >                    
                        <Canvas Name="mainCanvas" >
                            <Ellipse Stroke="#ff000000" Fill="#ffffffff" Margin="61, 36, 100, 0" VerticalAlignment="Top" Height="33" Width="33">

                            </Ellipse>
                        </Canvas>                    
                </TabItem>
            </TabControl>
            <GridSplitter Width="5" Grid.Column="1"/>
            <Control:WpfPropertyGrid x:Name="property" Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
