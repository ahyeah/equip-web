@model WebApp.Controllers.A11dot2Controller.Index_Model
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_LayoutMain.cshtml";
    }

    <style type="text/css">
        tr.MM_hidden {
            display: none;
        }

        tr.MM_shown {
        }

        tr.selected {
            background-color: #acbad4;
        }
    </style>
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/extensions/Select/css/select.bootstrap.min.css" />

    <section class="content" style="background-color: #ecf0f5;">
        <div class="box box-primary">
            <div class="box-header with-border bg-gray">
                <h3 class="box-title" style="font: medium bold; font-family:SimHei">A11.2-设备隐患排查</h3>
            </div>

            <div class="box-body">
                <div class="row">
                    <div class="col-xs-2">
                        <a id="Add" class="btn btn-block btn-social btn-info" onclick="Create()">
                            <i class="fa fa-plus"></i>装置设备员提报
                        </a>
                    </div>

                </div>
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title" style="font:bold; color:red">待处理任务列表</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>


            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-hover table-bordered">                           
                                <thead>
                                    <tr>
                                    <th>序号</th>
                                    <th>任务送达时间</th>
                                    <th>任务描述</th>
                                    <th>任务传达人</th>
                                    <th>任务处理</th>
                                 </tr>
                                </thead> 
                            <tbody>
                                @foreach (var item in Model.Am)
                                {
                                    <tr>
                                        <th>@item.missIndex</th>
                                        <th>@item.missTime</th>
                                        <th>@item.miss_desc</th>
                                        <th>@item.userName</th>
                                        <th><button onclick="JavaScript: location.href='@item.miss_url'">处理</button></th>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="box">
            <div class="box-header">
                <h3 class="box-title " style="font:bold; color:green">历史任务列表</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="box-body table-responsive no-padding">
                <div class="row">
                    <div class="col-xs-12">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>序号</th>
                                    <th>任务发起人</th>
                                    <th>任务发起时间</th>
                                    <th>任务最后状态</th>
                                    <th>查看详情</th>
                                </tr>
                             </thead>
                            <tbody>
                                @foreach (var item in Model.Hm)
                                {
                                    <tr>
                                        <th>@item.missIndex</th>
                                        <th>@item.missStartName</th>
                                        <th>@item.missStartTime</th>
                                        <th>@item.miss_LastStatusdesc</th>

                                        <th><button onclick="JavaScript: location.href='/A13dot1/WorkFolw_Detail?wfe_id=@item.miss_wfe_Id'">查看详情</button></th>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->





    </section>
    @section js{
        <!-- Page script -->
        <script>

            function Create() {

                $.ajax({
                    type: 'POST',
                    url: '/Main/CreateFlow',
                    data: { flowname: "A11dot2" },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function (data) {
                        alert('error: A11.2 index');
                    }
                });
            }

        </script>
    }

