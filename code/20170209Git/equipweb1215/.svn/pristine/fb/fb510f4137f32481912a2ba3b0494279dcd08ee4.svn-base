        public bool SaveWorkFlowEntity(WorkFlow_Entity we)
        {
            using (var db = base.NewDB())
            {
                var wfe = db.workflow_entities.Where(a => a.WE_Id == we.WE_Id).First();
                wfe.WE_Status = we.WE_Status;
                wfe.WE_Binary = we.WE_Binary;
                if (db.SaveChanges() >= 1)
