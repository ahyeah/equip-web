@model WebApp.Controllers.CommonController.WFDetail_Model
@{
    ViewBag.Title = "PqAssess";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
                <!-- The time line -->
                <ul class="timeline">  
                     <!-- 工作流当前任务-Star -->
                    <!-- timeline item -->
                    <li class="time-label">
                        <span class="bg-green">
                           当前任务：片区风险矩阵评估
                        </span>
                    </li>
                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <li>
                        <i class="fa fa-camera bg-purple"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fa fa-clock-o">@ViewBag.curtime</i>当前用户：@ViewBag.curuser</span>
                            <h3 class="timeline-header"><span class="lead" style="color:red">片区风险矩阵评估</span></h3>
                            <div class="timeline-body">
                            <form role="form" class="col-md-offset-1">
                                <input type="text" id="wef_id"  hidden="hidden" value="@ViewBag.WF_NAME"> 
                                <input type="text" id="ReAssessFlag"  hidden="hidden" value="@ViewBag.zjtdOpinion"> 
                                 
                                <div class="alert alert-warning" role="alert" style="font-size:large;font-weight:300" id="ReAssessWarning" hidden="hidden"><img src="~/images/light2.gif" />&nbsp&nbsp【提示】：上次评估结果已被专家团队否定(原因：@Model.ALLHistoryMiss[Model.ALLHistoryMiss.Count()-1].Miss_Params["ZytdConfirm_Reason"]），本次请谨慎评估!!!</div>
                                <div id="Danger_Intensity"  class="form-group col-md-6"> 
                                    <p class="text-red"><strong>隐患强度等级：</strong></p>
                                        <div>
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption1"
                                                       value="S1" >S1 - 全厂生产波动，2套以上装置非计划停工或全厂生产降量
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption2"
                                                       value="S2" > S2 - 单套装置非计划停工或2套以上装置异常波动
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption3"
                                                       value="S3" > S3 - 系统或装置局部停工，大机组急停
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption4"
                                                       value="S4" > S4 - 单套生产装置异常波动
                                            </label>  
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption5"
                                                       value="S5" > S5 - 单台设备停运
                                            </label>   
                                            <label class="radio">
                                                <input type="radio" name="DangerIntensityOptions" id="DangerIntensityOption6"
                                                       value="S6" >S6 - 无影响
                                            </label>                               
                                       </div>
                                </div>
                                  <div id="Time_Level"  class="form-group  col-md-6">
                                    <p class="text-red"><strong>时间等级：</strong></p>
                                          <div >                                             
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption1"
                                                       value="D1" >D1 - 10天内可能发生
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption2"
                                                       value="D2" >D2 - 10天至1个月内可能发生
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption3"
                                                       value="D3" >D3 - 1个月至3个月内可能发生
                                            </label>
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption4"
                                                       value="D4" >D4 - 3个月至6个月内可能发生
                                            </label>  
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption5"
                                                       value="D5" > D5 - 6个月至1年内可能发生
                                            </label>   
                                            <label class="radio">
                                                <input type="radio" name="TimeLevelOptions" id="TimeLevelOption6"
                                                       value="D6" >D6 - 1年内不会发生
                                            </label>                               
                                       </div>
                                </div>
	                            <div>
                                <table id="riskMatrix" class="table table-bordered">
                                                                    <tr> <td></td>  <td>D1</td>  <td>D2</td>  <td>D3</td>  <td>D4</td>  <td>D5</td>  <td>D6</td> </tr>
                                                                    <tr> <td>S1</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                                                    <tr> <td>S2</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                                                    <tr> <td>S3</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                                                    <tr> <td>S4</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                                                    <tr> <td>S5</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                                                    <tr> <td>S6</td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td>  <td></td> </tr>
                                  </table>
	                             </div>
                                <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>

                            </form>
                        </div>
                        </div>
                    </li>
                    <!-- END timeline item -->
                    <!-- timeline item -->
                 <!-- 工作流当前任务-End -->
                  
                 <!-- 工作流历史操作-通用部分Star -->
                   <li class="time-label">
                            <span class="bg-green">
                               当前工作流历史操作
                            </span>
                        </li>
                     <!-- timeline time label -->  
                    @for (int i = @Model.ALLHistoryMiss.Count()-1; i >=1 ; i--)
                    {     <li class="time-label">
                              <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@i" aria-expanded=true aria-controls="@i">
                                  @Model.MissTime[i] - @Model.ALLHistoryMiss[i].WE_Event_Desc
                              </a>
                           </li>
                    
                          <li class="collapse" id="@i">
                            <i class="fa fa-camera bg-purple"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.MissTime[i]</i>操作用户： @Model.MissUser[i]</span>
                                <h3 class="timeline-header lead"><span class="lead" style="color:red">@Model.ALLHistoryMiss[i].WE_Event_Desc</span></h3>
                                <div class="timeline-body">
                                    <table class="table  table-hover table-bordered">
                                        <tbody>
                                             @foreach (var pp in @Model.ALLHistoryMiss[i].Miss_ParamsAppRes)
                                            {
                                                if(pp.Value.ToString()!="App_hidden")
                                                {
                                                    <tr class="info">
                                                        <th>@Model.ALLHistoryMiss[i].Miss_ParamsDesc[pp.Key]</th>
                                                        <td>@Model.ALLHistoryMiss[i].Miss_Params[pp.Key]</td>
                                                    </tr>
                                                 }
                                            }
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                }
                     
                <!-- END timeline item -->

                  <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li> 
            <!-- 工作流历史操作-通用部分End -->

           </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


@section js{
<script>
    function PageLoad() {
        $("#riskMatrix").hide();
        if ($("#ReAssessFlag").val()=="0")
            $("#ReAssessWarning").show();
    };
    function RiskMatrixInit() {
        $('#riskMatrix td').each(function () {
            $(this).css("text-align", "center");
            $(this).css("vertical-align", "center");

            if (this.parentNode.rowIndex >= 1 && this.cellIndex >= 1) {
                //$(this).attr('onclick', 'cellclick()');
                //var radioHtml = "<input type=\"radio\" name=\"leveloptionsRadios\" value=\"S"+this.parentNode.rowIndex+"D"+this.cellIndex+"\">"
                //$(this).html(radioHtml);

                if ((this.parentNode.rowIndex == 1 && this.cellIndex >= 1 && this.cellIndex <= 3) || (this.parentNode.rowIndex == 2 && this.cellIndex >= 1 && this.cellIndex <= 2))
                    $(this).css("background-color", "rgb(255, 0, 0)"); //注意："0"前面有空格
                else if ((this.parentNode.rowIndex == 3 && this.cellIndex >= 3 && this.cellIndex <= 6) || (this.parentNode.rowIndex == 4 && this.cellIndex >= 2 && this.cellIndex <= 6) || (this.parentNode.rowIndex >= 5))
                    $(this).css("background-color", "rgb( 0,128, 0)");
                else
                    $(this).css("background-color", "rgb(255,255, 0)");
            }
            else {
                $(this).css("font", "medium bold");
                $(this).css("background-color", "rgb(200,200, 200)");
            }
        })

    }
    $(document).ready(
        PageLoad());
        RiskMatrixInit();

    $("input:radio[name='DangerIntensityOptions']").change(function () {
        $('#riskMatrix td').css("border", "1px solid white");       
        var ttr = $("input:radio[name='DangerIntensityOptions']:checked").val();
        var ttc = $("input:radio[name='TimeLevelOptions']:checked").val();
        if (ttr != null && ttc != null) {
            $("#riskMatrix").show();
            var idx = 7 * parseInt(ttr.substr(1, 1), 10) + parseInt(ttc.substr(1, 1), 10);        
            $('#riskMatrix td').eq(idx).css("border", "3px solid black");
        }        
    });
    $("input:radio[name='TimeLevelOptions']").change(function () {
        $('#riskMatrix td').css("border", "1px solid white");        
        var ttr = $("input:radio[name='DangerIntensityOptions']:checked").val();
        var ttc = $("input:radio[name='TimeLevelOptions']:checked").val();
        if (ttr != null && ttc != null) {
            $("#riskMatrix").show();
            var idx = 7 * parseInt(ttr.substr(1, 1), 10) + parseInt(ttc.substr(1, 1), 10);
            $('#riskMatrix td').eq(idx).css("border", "3px solid black");
        }
    });
    function submit_click() {
        var flow_name = $("#wef_id").val();   
        var Danger_Intensity = $("input:radio[name='DangerIntensityOptions']:checked").val();
        var Time_Level = $("input:radio[name='TimeLevelOptions']:checked").val();

        if (Danger_Intensity !=null  && Time_Level != null) {
            $.ajax({
                type: 'POST',
                url: '/A11dot2/submitAssess_signal',
                data: {
                    json1: '{Flow_Name: "' + flow_name
                              + '", Danger_Intensity: "' + Danger_Intensity
                              + '", Time_Level: "' + Time_Level
                              //+ '", RiskMatrix_Color: "' + RiskMatrix_Color
                              //+ '", DangerType_isgreen: "' + DangerType_isgreen
                              + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error submitAssess_signal A11.2');
                }
            });
        }
        else {
            alert('设定项不全，故障强度级别和时间级别都需要设定！请重新设置！');
        }

    }
    </script>
}


