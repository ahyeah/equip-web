@model WebApp.Controllers.CommonController.WFDetail_Model
@{
    ViewBag.Title = "CjImplementPlan";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
                <!-- The time line -->
                <ul class="timeline">  
                     <!-- 工作流当前任务-Star -->
                    <!-- timeline item -->
                    <li class="time-label">
                        <span class="bg-green">
                           当前任务：车间组织和实施应急方案
                        </span>
                    </li>
                    <!-- /.timeline-label -->
                    <!-- timeline item -->
                    <li>
                        <i class="fa fa-camera bg-purple"></i>
                        <div class="timeline-item">
                            <span class="time"><i class="fa fa-clock-o">@ViewBag.curtime</i>当前用户：@ViewBag.curuser</span>
                            <h3 class="timeline-header"><span class="lead" style="color:red">车间组织和实施应急方案</span></h3>
                            <div class="timeline-body">
                            <form role="form" >
                                <input type="text" id="wef_id"  hidden="hidden" value="@ViewBag.WF_NAME">  
                                   <div id="CjImplementedPlan"  class="form-group">
                                    <p class="text-green">车间组织和实施应急方案，是否完成?</p>
                                    <div class="radio" >
                                        <label>
                                            <input name="CjImplementedPlan" id="CjImplementedPlanYes" type="radio" value="1" checked="" ">
                                            已完成 
                                        </label>
                                        <label>
                                            <input name="CjImplementedPlan" id="CjImplementedPlanNo" type="radio" value="0" ">
                                           未完成
                                        </label>  
                                       
                                    </div>
                                </div>
                        
                                <div class="box-footer">
                                    <button class="btn btn-primary" type="button" onclick="submit_click()">确定</button>
                                </div>

                            </form>
                        </div>
                        </div>
                    </li>
                    <!-- END timeline item -->
                    <!-- timeline item -->
                 <!-- 工作流当前任务-End -->
                  
                 <!-- 工作流历史操作-通用部分Star -->
                   <li class="time-label">
                            <span class="bg-green">
                               当前工作流历史操作
                            </span>
                        </li>
                     <!-- timeline time label -->  
                    @for (int i = @Model.ALLHistoryMiss.Count()-1; i >=1 ; i--)
                    {     <li class="time-label">
                              <a class="btn btn-primary" role="button" data-toggle="collapse" href="#@i" aria-expanded=true aria-controls="@i">
                                  @Model.MissTime[i] - @Model.ALLHistoryMiss[i].WE_Event_Desc
                              </a>
                           </li>
                    
                          <li class="collapse" id="@i">
                            <i class="fa fa-camera bg-purple"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fa fa-clock-o">@Model.MissTime[i]</i>操作用户： @Model.MissUser[i]</span>
                                <h3 class="timeline-header lead"><span class="lead" style="color:red">@Model.ALLHistoryMiss[i].WE_Event_Desc</span></h3>
                                <div class="timeline-body">
                                    <table class="table  table-hover table-bordered">
                                        <tbody>
                                            @foreach (var pp in @Model.ALLHistoryMiss[i].Miss_Params)
                                            {
                                            <tr class="info">
                                                <th>@pp.Key</th>
                                                <td>@pp.Value.ToString()</td>
                                            </tr>
                                            }

                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </li>
                }
                     
                <!-- END timeline item -->

                  <li>
                        <i class="fa fa-clock-o bg-gray"></i>
                    </li> 
            <!-- 工作流历史操作-通用部分End -->

           </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>
@section js{
<script>
    function PageLoad() {

    };
    $(document).ready(
        PageLoad());

   
    function submit_click() {
        var flow_name = $("#wef_id").val();
        var ImplementPlan_done = "true";
        if ($("#CjImplementedPlanNo").attr("checked"))
            ImplementPlan_done = "false";

        $.ajax({
            type: 'POST',
            url: '/A11dot2/submitImplementPlan_signal',
            data: {
                json1: '{Flow_Name: "' + flow_name
                        + '", ImplementPlan_done: "' + ImplementPlan_done + '"}'
            },
            success: function (data) {
                location.href = data;
            },
            error: function () {
                alert('error');
            }
        });

    }
    </script>
}

