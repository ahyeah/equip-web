namespace FlowDesigner.PropertyEditor
{
    /// <summary>
    /// LinkParamsWin.xaml 的交互逻辑
    /// </summary>
    public partial class LinkParamsWin : Window
    {
        private List<string> _newValue;
        public List<string> newValue {
            get {
                return _newValue;
            }
            set
            {
                _newValue = value;
                foreach(string s in _newValue)
                {
                    Dest.Items.Add(s);
                }
                MainWindow mw = (MainWindow)Application.Current.MainWindow;
                foreach(param pa in mw.main_proj.CurrentWF.params_table)
                {
                    if (!_newValue.Contains(pa.Name))
                        Source.Items.Add(pa.Name);
                }
            }
        }
        public LinkParamsWin()
        {
            InitializeComponent();
        }

        private void OK_Click(object sender, RoutedEventArgs e)
        {
            newValue.Add("aaaa");
            this.DialogResult = true;
            this.Close();
        }

        private void Cancel_Click(object sender, RoutedEventArgs e)
        {
            this.DialogResult = false;
            this.Close();
        }
    }
}
