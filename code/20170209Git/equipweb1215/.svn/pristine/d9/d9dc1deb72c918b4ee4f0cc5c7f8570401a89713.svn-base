@model WebApp.Controllers.CommonController.A5_Model
@{
    ViewBag.Title = "PqSummary";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
    <style type="text/css">
        tr.MM_hidden {
            display: none;
        }

        /*tr.MM_shown {
        }*/

        tr.selected {
            background-color: #acbad4;
        }
    </style>
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/extensions/Select/css/select.bootstrap.min.css" />

    <section class="content" style="background-color: #ecf0f5;">
        <div class="box box-primary">
            <div class="box-header with-border bg-gray">
                <h3 class="box-title" style="font: medium bold; font-family:SimHei;color:red">A5.1-设备完好</h3>
            </div>

        </div>
        <div class="box">
            <div class="box-header">
                <p class="box-title" style="font:bold; color:red">【A5.1】设备完好-片区汇总列表</p>
            </div>
       <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <div class="row">
                    <div class="col-xs-12">
                        <table id="example1" class="table table-hover table-bordered">                           
                                <thead>
                                    <tr>
                                   @* <th>序号</th>*@
                                    <th>片区</th>
                                    <th>生产装置</th>
                                    <th>设备编号</th>
                                    <th>设备工艺编号</th>
                                    <th>本月不完好次数</th>
                                    <th>全年不完好次数</th>
                                   @* <th>操作</th>*@
                                 </tr>
                                </thead> 
                            <tbody>
                                @foreach (var item in Model.A5_ModelInfoList)
                                {
                                    <tr>
                                        @*<td>@item.missIndex</td>*@
                                        <td>@item.Pq_Name</td>
                                        <td>@item.Zz_Name</td>
                                        <td>@item.Equip_Code</td>
                                        <td>@item.Equip_GyCode</td>
                                        <td>@item.nTimesInMonth</td>
                                        <td>@item.nTimesInYear</td>
                                        @*<td><button onclick="JavaScript: location.href='@item.nFlagTheWorstTen'">处理 @item.nFlagTheWorstTen</button></td>*@
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>

    @section js{
        <!-- Page script -->
        <script>
            $(function () {
                $("thead").css("background", "#7CCD7C");
                $("tbody tr").addClass("info");
            });

             $(function () {
                 $("#example1").DataTable({
                    "oLanguage": {
                                     "sLengthMenu": "每页显示 _MENU_ 条记录",
                                     "sZeroRecords": "抱歉， 没有找到",
                                     "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                                     "sInfoEmpty": "没有数据",
                                     "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                                     "sZeroRecords": "没有检索到数据",
                                     "sSearch": "模糊查询:  ",
                                     "sProcessing": "<img src='/images/loading.gif'>  努力加载数据中.",
                                     "oPaginate": {
                                         "sFirst": "首页",
                                         "sPrevious": "前一页",
                                         "sNext": "后一页",
                                         "sLast": "尾页"
                                     }
                                  },
                     "paging": true,
                     "lengthChange": false,
                     "searching": true,
                     //"ordering": true,
                     "info": true,
                     "autoWidth": false,
                     "aoColumnDefs": [ { "bSortable": false, "aTargets": [] }] 
                 });

             });
      </script>
    }