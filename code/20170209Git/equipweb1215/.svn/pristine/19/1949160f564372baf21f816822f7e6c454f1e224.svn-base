
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>EquipIntegrity</b>MS</a>
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">登录界面</p>
            <!--<form  method="post">-->
                <div class="form-group has-feedback">
                    <input class="form-control" type="text" placeholder="用户名" id="UserName">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input class="form-control" type="password" placeholder="密码" id="UserPwd">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
               <div class="form-group">                                   
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios1"
                                       value="option1" checked> 动
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios2"
                                       value="option2"> 静
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios3"
                                       value="option3"> 电
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="optionsRadiosinline" id="optionsRadios4"
                                       value="option4"> 仪
                            </label>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label>
                                <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input style="background: rgb(255, 255, 255); margin: 0px; padding: 0px; border: 0px currentColor; border-image: none; left: -20%; top: -20%; width: 140%; height: 140%; display: block; position: absolute; opacity: 0;" type="checkbox"><ins class="iCheck-helper" style="background: rgb(255, 255, 255); margin: 0px; padding: 0px; border: 0px currentColor; border-image: none; left: -20%; top: -20%; width: 140%; height: 140%; display: block; position: absolute; opacity: 0;"></ins></div> 记住我
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button class="btn btn-primary btn-block btn-flat" onclick="submit_click()">登录</button>
                    </div>
                    <!-- /.col -->
                </div>
            <!--</form>-->
            
          
        </div>
        <!-- /.login-box-body -->
    </div>
   





@section js{


<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });

    function submit_click() {

        var name = $("#UserName").val();
        var pwd = $("#UserPwd").val();
        $.ajax({
            type: 'POST',
            url: '/Login/LogOn',
            data: { "userName": name, "userPwd": pwd },
            success: function (data) {
                //alert("aaaaa");
                location.href = data;
            },
            error: function () {
                alert('error');
            }
        });

    }


</script>


}