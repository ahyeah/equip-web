@model WebApp.Controllers.A13dot2Controller.A13dot2_Model
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
    <style type="text/css">
        tr.MM_hidden {
            display: none;
        }

        /*tr.MM_shown {
        }*/

        tr.selected {
            background-color: #acbad4;
        }
    </style>
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
    <link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/extensions/Select/css/select.bootstrap.min.css" />

    <section class="content" style="background-color: #ecf0f5;">
        <div class="box box-primary">
            <div class="box-header with-border bg-gray">
                <h3 class="box-title" style="font: medium bold; font-family:SimHei;color:red">A13.2-DRBPM紧急检修</h3>
            </div>

        </div>
        <div class="box">
            <div class="box-header">
                <p class="box-title" style="font:bold; color:red">DRBPM紧急检修计划表</p>
            </div>
       <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <div class="row">
                    <div class="col-xs-12">
                        <table id="example1" class="table table-hover table-bordered">                           
                                <thead>
                                    <tr>
                                    @*<th>装置名称</th><th>设备编号</th><th>工艺编号</th><th>设备型号</th><th>故障强度</th><th>报警等级</th><th>运行趋势</th><th>上次检修时间</th><th>平均无故障时间（月）</th><th>检修原因</th><th>重点检修内容</th><th>装置提报时间</th><th>计划检修时间</th><th>操作</th>*@
                                    <th>装置名称</th><th>设备编号</th><th>工艺编号</th><th>故障强度</th><th>上次检修时间</th><th>平均无故障时间（月）</th><th>计划检修原因</th><th>计划检修时间</th><th>操作</th>
                                 </tr>
                                </thead> 
                            <tbody>
                                @foreach (var item in Model.A13dot2_ModelInfoList)
                                {
                                    <tr>
                                        @*<td>@item.zzName</td><td>@item.sbCode</td><td>@item.sbGyCode</td><td>@item.sbType</td><td>@item.faultIntensity</td><td>@item.alarmState</td><td>@item.runTrend</td><td>@item.latestDate</td><td>@item.avgInterval</td><td>@item.sbStateBak</td><td>@item.jxKeyContent</td><td>@item.submitTime</td><td>@item.jxPlanDate</td>*@
                                        <td>@item.zzName</td><td>@item.sbCode</td><td>@item.sbGyCode</td><td>@item.faultIntensity</td><td>@item.latestDate</td><td>@item.avgInterval</td><td>@item.sbStateBak</td><td>@item.jxPlanDate</td>
                                        <td><button name="JumpToA8dot2">转入A8.2-检修计划实施管理</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>

    @section js{
        <!-- Page script -->
        <script>
            $(function () {
                $("thead").css("background", "#7CCD7C");
                $("tbody tr").addClass("info");
            });

            $("button[name='JumpToA8dot2']").click(function () {               
                if (!confirm('确定要转入吗？'))
                    return false;
                var strAll = "";
                //alert($(this));
                //alert($(this).parent().text());
                //alert($(this).parent().prev().text());
                $(this).parent().prevAll().each(function () {
                    strAll += $(this).text() + "$";
                });
                $.ajax({
                    type: 'POST',
                    url: '/A13dot2/click_submitsignal',
                    data: {
                        json1: '{strAll: "' + strAll
                             + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });

            });

             $(function () {
                 $("#example1").DataTable({
                    "oLanguage": {
                                     "sLengthMenu": "每页显示 _MENU_ 条记录",
                                     "sZeroRecords": "抱歉， 没有找到",
                                     "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                                     "sInfoEmpty": "没有数据",
                                     "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                                     "sZeroRecords": "没有检索到数据",
                                     "sSearch": "模糊查询:  ",
                                     "sProcessing": "<img src='/images/loading.gif'>  努力加载数据中.",
                                     "oPaginate": {
                                         "sFirst": "首页",
                                         "sPrevious": "前一页",
                                         "sNext": "后一页",
                                         "sLast": "尾页"
                                     }
                                  },
                     "paging": true,
                     "lengthChange": false,
                     "searching": true,
                     //"ordering": true,
                     "info": true,
                     "autoWidth": false,
                     "aoColumnDefs": [ { "bSortable": false, "aTargets": [2,3,4,5,6,7,8] }] 
                 });

             });
      </script>
    }