using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Control;
using System.Windows.Controls;
using System.Windows.Input;
using System.Windows.Media;
using System.Windows.Shapes;

namespace FlowDesigner.customcontrol
{
    class DesignerPage : CloseableTab
    {
        private Canvas main_Canvas = new Canvas() { 
            VerticalAlignment = VerticalAlignment.Stretch,
            HorizontalAlignment = HorizontalAlignment.Stretch
        };
        public DesignerPage()
        {
            this.AddChild(main_Canvas);
            Ellipse e = new Ellipse()
                {
                    Fill = Brushes.Red,
                    Stroke = Brushes.Black,
                    Margin = new Thickness(61, 36, 100, 0),
                    VerticalAlignment = System.Windows.VerticalAlignment.Top,
                    Height = 33,
                    Width = 33
                };
            
            main_Canvas.Children.Add(e);
        }


    }
}
