
@{
    ViewBag.Title = "SubmitApplicationForm";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>SubmitApplicationForm</h2>
<section class="content" style="background-color: #ecf0f5;">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">状态监测及三检特护申请表</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">申请时间</label>
                        <div class="col-sm-10">
                            <div class="input-group" >                                 
                                  <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                  </div>
                                  <input type="text" class="form-control datepicker" id="appdate">
                                   <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" class="form-control timepicker" id="apptime">  
                                </div>
                                <!-- /.input group -->   
                         </div>                     
                    </div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">申请单位</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">申请单位1</option>
                                <option>申请单位2</option>
                                <option>申请单位3</option>                    
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">申请装置</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">申请装置1</option>
                                <option>申请装置2</option>
                                <option>申请装置3</option>                    
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">设备工艺编号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">设备工艺编号1</option>
                                 <option>设备工艺编号2</option>
                                <option>设备工艺编号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label   class="col-sm-2 control-label">设备编号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected">设备编号1</option>
                                <option>设备编号2</option>
                                <option>设备编号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">设备位号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 设备位号1</option>
                                <option>设备位号1</option>
                                <option>设备位号2</option>
                                <option>设备位号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">设备型号</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 设备型号1</option>
                                <option>设备型号2</option>
                                <option>设备型号3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">设备专业分类</label>
                        <div class="col-sm-10">
                            <select class="form-control select2" style="width: 100%;">
                                <option selected="selected"> 设备专业分类1</option>
                                <option>设备专业分类1</option>
                                <option>设备专业分类2</option>
                                <option>设备专业分类3</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">数据来源</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios1"
                                       value="option1" checked>人工提报
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios2"
                                       value="option2"> S800系统
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios3"
                                       value="option3"> 美迅离线巡检平台
                            </label>        
                        </div>
                    </div>

                    <div class="form-group">
                        <label  class="col-sm-2 control-label">问题描述</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">处理措施</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">专业问题分类</label>
                        <div class="col-sm-10">
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios11"
                                       value="option1" checked>动
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios22"
                                       value="option2"> 静
                            </label>
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios33"
                                       value="option3"> 电
                            </label>  
                            <label class="checkbox-inline">
                                <input type="radio" name="zyoptionsRadiosinline" id="optionsRadios44"
                                       value="option4"> 仪
                            </label>         
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">原因分析</label>
                        <div class="col-sm-10">
                             <label class="checkbox-inline">
                                 <input type="checkbox" id="inlineCheckbox1" value="option1"> 原因1
                             </label>
                             <label class="checkbox-inline">
                                  <input type="checkbox" id="inlineCheckbox2" value="option2"> 原因2
                              </label>
                           <label class="checkbox-inline">
                                 <input type="checkbox" id="inlineCheckbox3" value="option3"> 原因3
                           </label>        
                        </div>
                    </div>
                    <div class="form-group">
                        <label  class="col-sm-2 control-label">附件上传</label>
                        <div class="col-sm-10">
                            <input type="file" id="inputfile">
                        </div>
                    </div>
 
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">提交</button>
                        </div>
                    </div>
                </form>              
             </div>
            </div>
    </div>
    
</section>

@section js{
    <!-- Page script -->
    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();

            //Datepicker
            $('.datepicker').datepicker({});

            //Timepicker
            $(".timepicker").timepicker({
                showInputs: false
            });
        }); 
    </script>
    }