@model WebApp.Controllers.A8dot2Controller.ZzSubmitModel
@{
    ViewBag.Title = "DrbpmSubmit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<section class="content">
    <!-- row -->
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline time label -->
            <li class="time-label">
                    <span class="bg-green">
                        @ViewBag.curtime
                    </span>
                </li>
                <!-- /.timeline-label -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-camera bg-purple"></i>
                    <div class="timeline-item">
                        <span class="time"><i class="fa fa-clock-o"></i>当前用户: @ViewBag.curuser</span>
                        <h3 class="timeline-header"><span class="lead">DRBPM自动提报（模拟）</span></h3>
                        <div class="timeline-body">
                            <form role="form">
                                <input type="text" id="wef_id" hidden="hidden" value="@ViewBag.WF_NAME">
                                 <div class="form-group" >
                                    <label   class="col-sm-2 control-label">设备编号：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Equip_Code">
                                    </div>
                                   </div>    
                                <div class="form-group" >
                                    <label   class="col-sm-2 control-label">简要说明：</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Abstract">
                                    </div>
                                   </div>  
                            </form>

                        <form class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button class="btn btn-default" type="button"  onclick="submit_click()">提交</button>
                                </div>
                            </div>
                        </form>
                        </div>
                    </div>
                </li>
                <!-- END timeline item -->
                <!-- timeline item -->
                <li>
                    <i class="fa fa-clock-o bg-gray"></i>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

</section>


@section js{
    <script>
        function PageLoad() {
           
        };
        $(document).ready(
            PageLoad());

        function IsDoneNo_Click() {                           
            
        }
        function IsDoneYes_Click() {           
        }

        function submit_click() {
            var flow_name = $("#wef_id").val();
            var Equip_Code = $("#Equip_Code").val();
            var Abstract = $("#Abstract").val();           
            var  DrbpmSubmit_done = "true";
                $.ajax({
                    type: 'POST',
                    url: '/A8dot2/DrbpmSubmit_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name             
                            + '", Equip_Code: "' + Equip_Code
                            + '", Abstract: "' + Abstract
                            + '", DrbpmSubmit_done: "' + DrbpmSubmit_done
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
           
        }
    </script>
}