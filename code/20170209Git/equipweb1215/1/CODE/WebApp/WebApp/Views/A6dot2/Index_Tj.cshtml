@model  WebApp.Controllers.A6dot2Controller.WDT_detail_Role
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<style type="text/css">
    tr.MM_hidden {
        display: none;
    }

    tr.MM_shown {
    }

    tr.selected {
        background-color: #acbad4;
    }
</style>
<link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/dataTables.bootstrap.css">
<link rel="stylesheet" href="~/Plugins/AdminLTE/plugins/datatables/extensions/Select/css/select.bootstrap.min.css" />

<section class="content" style="background-color: #ecf0f5;">
    <div class="box box-primary">
        <div class="box-header with-border bg-gray">
            <h3 class="box-title" style="font: medium bold; font-family:SimHei;color:red">A6.2-润滑管理</h3>
        </div>

        <div class="box-body">
            <div class="row">
         
                <div class="col-xs-6 col-md-3">
                    <a id="Add" class="btn btn-block btn-social btn-info" href="/A6dot2/WDT_TjQuery">
                        <i class="fa fa-pencil-square-o"></i>超期未换油统计
                    </a>
                </div>

            </div>
        </div>
    </div>
    <div class="box">
        <div class="box-header">
            <p class="box-title" style="font:bold; color:red">换油周期表历史列表</p>
            @*                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>*@
        </div>


        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <div class="row">
                <div class="col-xs-12">
                    <table id="example1" class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>序号</th>
                                <th>上传时间</th>
                                <th>上传人员</th>
                                <th>五定表名称</th>
                                <th>所属片区</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.wdt_List)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.uploadTime</td>
                                    <td>@item.userName</td>
                                    <td>@item.wdtName</td>
                                    <td>@item.pqName</td>
                                    <td><button onclick="JavaScript: location.href='@item.url'">详细</button></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
   
    <!-- /.box -->


</section>
@section js{
    <!-- Page script -->
    <script>
        $(function () {
            $("thead").css("background", "#7CCD7C");
            $("tbody tr").addClass("info");
        });

        function upLoadWDT() {

          
                    location.href ="/A6dot2/UploadWDT"
              
        }

    </script>

    <script>
        $(function () {
            $("#example1").DataTable({
                "oLanguage": {
                    "sLengthMenu": "每页显示 _MENU_ 条记录",
                    "sZeroRecords": "抱歉， 没有找到",
                    "sInfo": "从 _START_ 到 _END_ /共 _TOTAL_ 条数据",
                    "sInfoEmpty": "没有数据",
                    "sInfoFiltered": "(从 _MAX_ 条数据中检索)",
                    "sZeroRecords": "没有检索到数据",
                    "sSearch": "模糊查询:  ",
                    "sProcessing": "<img src='/images/loading.gif'>  努力加载数据中.",
                    "oPaginate": {
                        "sFirst": "首页",
                        "sPrevious": "前一页",
                        "sNext": "后一页",
                        "sLast": "尾页"
                    }
                },
                "paging": true,
                "lengthChange": false,
                "searching": true,
                //"ordering": true,
                "info": true,
                "autoWidth": false,
                "aoColumnDefs": [{ "bSortable": false, "aTargets": [0, 3, 4, 5] }]
            });
          
        });
    </script>
}

