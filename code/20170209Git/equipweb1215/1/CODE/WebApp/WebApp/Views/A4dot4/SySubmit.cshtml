@section js{
    <!-- Page script -->
    <script src="~/Plugins/AdminLTE/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();
            getCurrentTime();
        });

        function getCurrentTime() {
            var mydate = new Date();
            var t = mydate.toLocaleString();
            $("#submit_time").val(t);

        };





        var submit_done = 1;
        function submit_click(k) {
            submit_done = k;
            var flow_name = $("#wef_id").val();
            //alert(flow_name);
            //alert($('#inputfile').val());
            $.ajax({
                type: 'POST',
                url: '/A4dot4/SySubmit_signal',
                data: {
                    json1: '{Flow_Name: "' + flow_name
                         + '",Plan_Order: "' + $('#Plan_Order').val()
                          + '",Plan_Name: "' + $('#Plan_Name').val()
                          + '",Equip_GyCode: "' + $('#Equip_GyCode').val()
                         + '",Equip_Code: "' + $('#Equip_Code').val()
                          + '",CM_Department: "' + $('#CM_Department').val()

                  //       + '", Problem_Desc: "' + $('#problemdesc').val()
                 //        + '", Problem_DescFilePath: "' + $("#fileUpLoad_name").val()

                         + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error');
                }
            });

        };
        function cancel_click() {
            submit_done = 0;
            if (!confirm('确定要取消吗？'))
                return false;

            var wef_id = $("#wef_id").val();
            var return_url = "/A4dot4/Index";
            $.ajax({
                type: 'POST',
                url: '/Common/CancelSubmit',
                data: {
                    json1: '{wef_id: "' + wef_id
                         + '", return_url: "' + return_url
                         + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error');
                }
            });
        };

        $(document).ready(function () {

            var options = {
                target: '#outputdiv',
                success: showResponse,
                error: function (data) {
                    $("#outputdiv").html = data;
                }
            };
        });
        function btnDelAttach_click() {
            var filename = $("#fileUpLoad_name").val()
            //alert($("#fileUpLoad_name").val());
            $.ajax({
                url: '/Common/DelAttachment',
                type: 'post',
                dataType: 'json',
                data: { "file": filename },
                // contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.status == "success") {
                        $("#msg").empty(); $("#fileUpLoad_name").val("");
                    } else {
                        alert(data.message);
                    }

                }
              ,
                error: function (err) {
                    alert(err.toString());
                }
            });
        };


        $('#filePost').submit(function () {
            var options = {
                target: '#outputdiv',
                dataType: 'json',
                success: function (data) {
                    $("#msg").empty().append("<table  ><td  class=\"col-sm-5\">已上传附件：" + data.fileName + "(" + data.fileSize + ")</td><td class=\"col-sm-2\"><input type='button' onclick=\"btnDelAttach_click()\" value='删除文件' class='fh_btn' id='btnDelAttach' filename='" + data.fileName + "' filesize='" + data.fileSize + "'></td>");
                    $("#fileUpLoad_name").val(data.fileName);
                },

                error: function (data) {
                    // $("#outputdiv").val() = "上传失败！";
                    alert(data);
                }
            };
            //alert($('#inputfile').val());
            /* alert($('#file').val());
             $.ajax({
                 type: 'POST',
                 url: '/Common/Upload',
                 data: { "file": $('#file').val() },
                 success: function (data) {
                     $("#outputdiv").html = data;
                 },

                 error: function (data) {
                     $("#outputdiv").html = data;
                 }*/

            $(this).ajaxSubmit(options);

            return false;
        });

        function showRequest(formData, jqForm, options) {
            alert('发送前');
            return true;
        }

        function showResponse(responseText, statusText) {

        };
        window.onbeforeunload = function () {//离开当前页面触发//火狐可用

            if (submit_done == 1) {
                //   alert("1");
                qx();
            }
        }


        window.onunload = function () {//谷歌可用

            if (submit_done == 1) {
                //  alert("2");
                qx();
            }

        }
        function qx() {


            var wef_id = $("#wef_id").val();
            var return_url = "/A4dot4/Index";
            $.ajax({
                type: 'POST',
                url: '/Common/CancelSubmit',
                async: false,
                data: {
                    json1: '{wef_id: "' + wef_id
                         + '", return_url: "' + return_url
                         + '"}'
                },
                success: function (data) {


                    location.href = data;

                },
                error: function () {
                    alert('error');
                }
            });




        }
    </script>
