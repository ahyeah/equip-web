    <script src="~/Plugins/AdminLTE/plugins/bootstrap-treeview/bootstrap-treeview.min.js"></script>
    <script src="~/Scripts/myWorkFlowInfo.js"></script>

    <script type="text/javascript">
        //
        function AccessGroupTree() {
            $.ajax({
                type: 'POST',
                url: '/A11dot1/List_AccessGroup',
                dataType: 'json',
                success: function (defaultData) {
                    $('#treeview2').treeview({
                        data: defaultData,
                        multiSelect: true,

                    });
                    //初始显示时折叠父节点
                    $('#treeview2').treeview('collapseAll', {
                        silent: true
                    });
                },
                error: function () {
                    alert('error');
                }
            });

        }
        //Treeinit()在两个组长、组员的input框被点击是触发，tree初始化
        function Treeinit() {



            $('#treeview2').treeview({
                data: defaultData,
                multiSelect: true,//多选的设置
            });


            //初始显示时折叠父节点


            $('#treeview2').treeview('collapseAll', {
                silent: true
            });
        };



        //确认组员的选择
        function confirmMember() {
            $('#event_output').html("");
            var test = $('#treeview2').treeview('getSelected', 1);

            //member 为循环选中的组员，以便在input框Group_Member显示
            var member = "";
            for (var j = 0; j < test.length; j++) {
                $('#event_output').prepend('<p>已选组员： ' + test[j].text + '</p>');

                if (test[j].text) {
                    member += test[j].text + ',';
                }
            }
            if (member.length > 0) {
                member = member.substring(0, member.length - 1);
                $('#Group_Member').val(member);
            }
            else {
                alert("你没有选择任何成员！");
            }

        }


        //取消选择，即重置页面input框和已选择的组员<P></p>中
        function deleteCheck() {
            $("#event_output p").remove();

        }
    </script>

    <script>
        var add_sup = "";

        function PageLoad() {
            $("#ChooseSupplier").show();
        };
        $(document).ready(
            PageLoad());

        function Supplier_Click() {
            alert("success");
            $("#ChooseSupplier").show();
        }
        function ZytdOpinionNo_Click() {

        }
        function ZytdOpinionYes_Click() {

        }
        //增加设备明细的输入框
        function AddSup() {



            $("#AddSupplier").append("<div   class='form-group'><label class='col-sm-2 control-label'>增加供应商</label><div class='col-sm-8'><input type='text' name='AddSupplier' class='form-control' ></div><div class='col-sm-1'><button type='button' class='btn btn-default del'  onclick='RemoveSup()' ><span class='glyphicon glyphicon-remove' ></span></button></div></div>");

        }
        //删除多的明细框
        function RemoveSup() {

            $('.btn.btn-default.del').click(function () {

                $(this).parents(".form-group").remove();
            })
        }



        function submit_click() {

            Group_Member = $("#Group_Member").val();
            var obj = document.getElementsByName('zyoptionsRadiosinline'); //选择所有name="'zyoptionsRadiosinline'"的对象，返回数组
            //取到对象数组后，我们来循环检测它是不是被选中
            var Supplier = '';


            $("input[name='AddSupplier']").each(function () {
                add_sup += $(this).val() + ',';
            });


            for (var i = 0; i < obj.length; i++) {
                if (obj[i].checked) Supplier += obj[i].value + ','; //如果选中，将value添加到变量s中
            }
            if (add_sup !=",") {
                Supplier = Supplier + add_sup;
            }
            //那么现在来检测s的值就知道选中的复选框的值了
            if (Supplier == "") {

                alert("尚未选择供应商！");
                return false;
            }

            if($("input:radio[name='IsVIPEquip_Result']:checked").val()!="是" && $("input:radio[name='IsVIPEquip_Result']:checked").val()!="否")
            {
                alert("未判断设备是否为重要设备！");
            }
            if (Group_Member=="")
            {
                alert("尚未选择小组成员！");
            }
            if (!myValidation())
                return false;
            if (!confirm('确定要提交吗？'))
                return false;

            var flow_name = $("#wef_id").val();

            //alert(flow_name);
            //alert($('#inputfile').val());
            $.ajax({
                type: 'POST',
                url: '/A4dot2/ZytdConfirmEquip_submitsignal',
                data: {
                    json1: '{Flow_Name: "' + flow_name
                         + '", TechSign_Person: "' + Group_Member
                         + '", IsVIPEquip_Result: "' + $("input:radio[name='IsVIPEquip_Result']:checked").val()
                         + '", Supplier_List: "' + Supplier


                         + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error');
                }
            });

        };

        function cancel_click() {
            if (!confirm('确定要取消吗？'))
                return false;

            var wef_id = $("#wef_id").val();
            var return_url = "/A4dot2/Index";
            $.ajax({
                type: 'POST',
                url: '/Common/CancelSubmit',
                data: {
                    json1: '{wef_id: "' + wef_id
                         + '", return_url: "' + return_url
                         + '"}'
                },
                success: function (data) {
                    location.href = data;
                },
                error: function () {
                    alert('error');
                }
            });
        };



    </script>
}



