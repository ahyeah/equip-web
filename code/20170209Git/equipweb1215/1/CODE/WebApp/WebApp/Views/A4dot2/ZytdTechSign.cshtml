            $("input[name='fileUpLoad_name']").each(function () {
                uploadDetail += $(this).val() + "$";

            });
            //alert(uploadDetail);


            if (!myValidation())
                return false;
            if (!confirm('确定要提交吗？'))
                return false;

            var flow_name = $("#wef_id").val();
            //alert(flow_name);
