                        $("#fileUpLoad_name_" + tt).val(data.allFileNames);
                        }
                        else { $("#inputfile").val(""); alert(data.message); }

                    },

                    error: function (data) {
                        // $("#outputdiv").val() = "上传失败！";
                        alert(data);
                    }
                };
                if(infile!="")
