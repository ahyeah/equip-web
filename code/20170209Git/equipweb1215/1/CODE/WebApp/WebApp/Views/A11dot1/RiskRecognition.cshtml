                //    $("#Risk_TypeImportant").attr("checked", 'checked'); //              
                //else
                //    $("#Risk_TypeNormal").attr("checked", 'checked'); //
            }
                
        });


        function submit_click() {
            var flow_name = $("#wef_id").val();            
            var RiskRecognition_done = "true";
            var Risk_Type = "";
            var ttr = $("input:radio[name='DangerIntensityOptions']:checked").val();
            var ttc = $("input:radio[name='TimeLevelOptions']:checked").val();
            if (ttr != null && ttc != null) {
                var rr = parseInt(ttr.substr(1, 1), 10);
                var cc = parseInt(ttc.substr(1, 1), 10);
                if ((rr == 3 && cc == 5) || (rr == 4 && cc >= 4 && cc <= 5) || (rr == 5 && cc >= 3 && cc <= 5))
                    Risk_Type = "重大风险";
                else
                    Risk_Type = "一般风险";
            }
            else {
                alert("后果的严重性(S)和事件发生的可能性（L）均需要选定！\n请重新操作！");
                return false;
            }

           // alert(Risk_Type);

            if (confirm("危害识别结果为:" + Risk_Type + ",\n\n是否确定提交？\n")) {
                //var Risk_Type = $("input:radio[name='Risk_Type']:checked").val();
                var Severity = $("input:radio[name='DangerIntensityOptions']:checked").val();
                var Probability = $("input:radio[name='TimeLevelOptions']:checked").val();
                $.ajax({
                    type: 'POST',
                    url: '/A11dot1/RiskRecognition_submitsignal',
                    data: {
                        json1: '{Flow_Name: "' + flow_name
                            + '", Risk_Type: "' + Risk_Type
                            + '", RiskRecognition_done: "' + RiskRecognition_done
                            + '", Severity: "' + $("input:radio[name='DangerIntensityOptions']:checked").val()
                            + '", Probability: "' + $("input:radio[name='TimeLevelOptions']:checked").val()
                            
                            + '"}'
                    },
                    success: function (data) {
                        location.href = data;
                    },
                    error: function () {
                        alert('error');
                    }
                });
            }
          




        }
