    <script>

        function PageLoad() {
            $("#riskmatrix").hide();
        };
        function RiskMatrixInit() {
            $('#riskMatrix td').each(function () {
                $(this).css("text-align", "center");
                $(this).css("vertical-align", "center");

                if (this.parentNode.rowIndex >= 1 && this.cellIndex >= 1) {
                    if ((this.parentNode.rowIndex == 1 && this.cellIndex >= 1 && this.cellIndex <= 4) || (this.parentNode.rowIndex == 2 && this.cellIndex >= 1 && this.cellIndex <= 3) || (this.parentNode.rowIndex == 3 && this.cellIndex >= 1 && this.cellIndex <= 2) || (this.parentNode.rowIndex == 4 && this.cellIndex == 1))
                        $(this).css("background-color", "rgb( 0, 128, 0)"); //注意："0"前面有空格
                    else if ((this.parentNode.rowIndex == 3 && this.cellIndex == 5) || (this.parentNode.rowIndex == 4 && this.cellIndex >= 4 && this.cellIndex <= 5) || (this.parentNode.rowIndex == 5 && this.cellIndex >= 3 && this.cellIndex <= 5))
                        $(this).css("background-color", "rgb(255, 0, 0)");
                    else
                        $(this).css("background-color", "rgb(255,255, 0)");
                }
                else {
                    $(this).css("font", "medium bold");
                    $(this).css("background-color", "rgb(200,200, 200)");
                }
            })

        }

        $(document).ready(
            PageLoad());
        RiskMatrixInit();

        $("input:radio[name='DangerIntensityOptions']").change(function () {
            $('#riskMatrix td').css("border", "1px solid white");
