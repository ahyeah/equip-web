            if (ttr != null && ttc != null) {
                $("#riskmatrix").show();
                var idx = 6 * parseInt(ttr.substr(1, 1), 10) + parseInt(ttc.substr(1, 1), 10);
                $('#riskMatrix td').eq(idx).css("border", "3px solid black");
